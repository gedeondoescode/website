---
import { Icon } from "astro-icon";

const result = [
	{
		icon: "alacritty",
		href: "alacritty.org",
	},
	{
		icon: "chakraui",
		href: "chakra-ui.com",
	},
	{
		icon: "express",
		href: "expressjs.com",
	},
	{
		icon: "git",
		href: "git-scm.com",
	},
	{
		icon: "github",
		href: "github.com",
	},
	{
		icon: "mongodb",
		href: "mongodb.com",
	},
	{
		icon: "nextdotjs",
		href: "nextjs.org",
	},
	{
		icon: "react",
		href: "reactjs.org",
	},
	{
		icon: "supabase",
		href: "supabase.com",
	},
	{
		icon: "tailwindcss",
		href: "www.tailwindcss.com",
	},
	{
		icon: "visualstudiocode",
		href: "code.visualstudio.com",
	},
	{
		icon: "vercel",
		href: "vercel.com/home",
	},
];
---

<div class="mt-5">
	<div>
		<ul
			class="mt-1 mb-2 flex flex-row flex-wrap justify-start gap-4 md:justify-center"
		>
			{
				result.map((i) => (
					<li class="h-8 w-8 md:h-10 md:w-10">
						<a
							href={`https://${i.href}`}
							class="fill-current transition ease-in-out text-zinc-800 hover:text-slate-500"
							target="_blank"
							rel="noopener noreferrer"
						>
							<Icon pack="simple-icons" name={i.icon} />
						</a>
					</li>
				))
			}
		</ul>
	</div>
</div>
